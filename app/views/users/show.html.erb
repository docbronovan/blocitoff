<div class="container">
  <div class="row">
    <h2 class="heading"><%= @user.name %></h2>
    <small>Member since <%= @user.created_at.to_date %></small>
    <p id='item-count'><%= pluralize(@incomplete, 'item') %></p>
  </div>

  <div class="col-md-8">
    <%= link_to "Update Items", user_path(@user), class: 'btn btn-info'%>

    <h3><strong>Items</strong></h3>
    <!-- Display current items -->
    <% if current_user.present? %>
      <% @items.each do |item| %>
        <% if item.completed == false %>
          <%= render item %>
        <% end %>
      <% end %>
      <!-- when new item is created with AJAX request -->
      <div class='js-items'></div>
      <!-- add new item form field -->
      <div class='new-item'>
        <p><%= render partial: "items/form", locals:{ item: @item} %></p> 
      </div> 
    <% end %>
  </div>
</div>
