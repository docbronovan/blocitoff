<div class="container">
  <div class="media-heading">
    <div class="col-md-9-offset-2">
      <div class="jumbotron">
        <h1>Blocitoff</h1>
        <p>Blocitoff is a resource for getting things done!</p>
        <% if current_user %>
          <p><%= link_to "Check your todos!", current_user %></p>
        <% else %>
          <p>
          <%= link_to "Sign In", new_user_session_path, class: 'btn btn-primary' %> or
          <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-primary' %> today!
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>