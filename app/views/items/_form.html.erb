<!--  partial in a new items view directory so users can submit new items -->

<%= form_for @item , remote: true do |f| %>
   <% if item.errors.any? %>
     <div class="alert alert-danger">
       <h4>There are <%= pluralize(item.errors.count, "error") %>.</h4>
       <ul>
         <% item.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
       </ul>
     </div>
   <% end %>
   <%= form_group_tag(item.errors[:description]) do %>
     <%= f.text_area :description, rows: 2, class: 'form-control form-group-sm', style: 'width:50%;', placeholder: "Enter item" %>
   <% end %>
   <div class="form-group">
     <%= f.submit "Save", class: 'btn btn-success' %>
   </div>
<% end %>
